{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,
    "skipLibCheck": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,

    "useDefineForClassFields": false,
    "verbatimModuleSyntax": true
  },
  "include": ["src"]
}
